{
  "name": "typescript-node-starter",
  "version": "0.0.0-development",
  "private": true,
  "description": "",
  "homepage": "https://github.com/tksst/typescript-node-starter",
  "repository": "github:tksst/typescript-node-starter",
  "license": "CC0",
  "author": {
    "name": "Takashi Sato",
    "email": "takashi@tks.st",
    "url": "https://www.tks.st/"
  },
  "type": "module",
  "exports": {
    "import": "./dist/lib/index.js",
    "require": "./dist/lib/index.cjs"
  },
  "types": "./dist/lib/index.d.ts",
  "bin": {
    "typescript-node-starter": "./dist/bin/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "run-s --continue-on-error build:*",
    "build:lib": "tsup src/lib/index.ts --sourcemap --minify-whitespace --minify-syntax --target node14 --dts --format esm,cjs --no-splitting --out-dir=dist/lib",
    "build:bin": "tsup src/bin/index.ts --sourcemap --minify-whitespace --minify-syntax --target node14 --format esm --no-splitting --out-dir=dist/bin",
    "prepack": "npm run build",
    "watch": "run-p --continue-on-error --print-label watch:*",
    "watch:lib": "npm run build:lib -- --watch",
    "watch:bin": "npm run build:bin -- --watch",
    "fix": "run-s fix:*",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "lint": "run-p --continue-on-error --print-label lint:*",
    "lint:eslint": "eslint --color --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/ --ext .js,.cjs,.mjs,.ts,.cts,.mts .",
    "lint:prettier": "prettier --cache -l .",
    "lint:tsc": "tsc --noEmit",
    "test": "run-s test:*",
    "test:unit": "jest"
  },
  "devDependencies": {
    "@jest/globals": "28.1.3",
    "@swc/core": "1.2.218",
    "@swc/jest": "0.2.22",
    "@tksst/eslint-prettier-meta": "1.2.3",
    "@types/node": "14.18.22",
    "better-typescript-lib": "2.1.0",
    "jest": "28.1.3",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "tsup": "6.1.3",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "source-map-support": "0.5.21"
  },
  "packageManager": "npm@8.14.0",
  "engines": {
    "node": ">= 14"
  }
}
