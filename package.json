{
  "name": "typescript-starter-template",
  "version": "0.0.0-development",
  "private": true,
  "description": "",
  "homepage": "https://github.com/tksst/typescript-starter-template",
  "repository": "github:tksst/typescript-starter-template",
  "license": "CC0-1.0",
  "author": {
    "name": "Takashi Sato",
    "email": "takashi@tks.st",
    "url": "https://www.tks.st/"
  },
  "type": "module",
  "exports": {
    "import": "./dist/lib/index.js",
    "require": "./dist/lib/index.cjs"
  },
  "types": "./dist/lib/index.d.ts",
  "bin": {
    "typescript-node-starter": "./dist/bin/index.js"
  },
  "scripts": {
    "clean": "tss-rmrf ./dist/",
    "build": "run-s --continue-on-error clean build:*",
    "build:lib": "tsup --config ./tsup.config.lib.js",
    "build:bin": "tsup --config ./tsup.config.bin.js",
    "prepack": "pnpm build",
    "watch": "npm-run-all clean --parallel --continue-on-error --print-label watch:*",
    "watch:lib": "pnpm build:lib --watch",
    "watch:bin": "pnpm build:bin --watch",
    "fix": "run-s --continue-on-error fix:*",
    "fix:prettier": "pnpm lint:prettier --write",
    "fix:eslint": "pnpm lint:eslint --fix",
    "lint": "run-p --continue-on-error --print-label lint:*",
    "lint:prettier": "prettier --check .",
    "lint:eslint": "eslint --color --cache --cache-strategy content --cache-location ./node_modules/.cache/eslint/ --ext .js,.cjs,.mjs,.ts,.cts,.mts .",
    "lint:secretlint": "secretlint --maskSecrets **",
    "lint:tsc": "tsc --noEmit",
    "test": "run-s test:*",
    "test:unit": "jest --ci"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "5.3.0",
    "@swc/core": "1.3.18",
    "@swc/jest": "0.2.23",
    "@tksst/eslint-config": "4.2.0",
    "@tksst/prettier-config": "1.1.0",
    "@tksst/typescript-starter-configs": "1.0.0",
    "@types/jest": "29.2.3",
    "@typescript-eslint/eslint-plugin": "5.43.0",
    "@typescript-eslint/parser": "5.43.0",
    "better-typescript-lib": "2.1.0",
    "eslint": "8.27.0",
    "eslint-plugin-jest": "27.1.5",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "jest": "29.3.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "secretlint": "5.3.0",
    "tsup": "6.5.0",
    "typescript": "4.9.3"
  },
  "dependencies": {
    "source-map-support": "0.5.21"
  },
  "packageManager": "pnpm@7.14.2",
  "engines": {
    "node": ">= 14"
  }
}
